{
  "name": "@repo/i18n-next",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./options": "./dist/options.js",
    "./routing": "./dist/i18nRouting.js",
    "./i18n.d.ts": "./src/i18n.d.ts",
    "./react/*": "./dist/hooks/*.js"
  },
  "scripts": {
    "build": "run-s build:tsup build:tsc",
    "build:tsup": "tsup",
    "build:tsc": "tsc --emitDeclarationOnly",
    "dev": "run-p dev:*",
    "dev:tsup": "tsup --watch",
    "dev:tsc": "tsc --emitDeclarationOnly --watch"
  },
  "devDependencies": {
    "@repo/tsup": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.8",
    "npm-run-all": "^4.1.5",
    "tsup": "8.2.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@repo/next-storage": "workspace: *",
    "@repo/i18n-translations": "workspace: *",
    "next-intl": "^3.26.3",
    "zod": "^3.24.2"
  },
  "peerDependencies": {
    "next": "15.1.6",
    "react": "19.0.0"
  }
}
