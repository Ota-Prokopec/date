{
  "name": "@repo/better-auth",
  "version": "1.0.1",
  "main": "dist/auth.js",
  "type": "module",
  "exports": {
    ".": "./dist/auth.js",
    "./client": "./dist/client.js",
    "./types": "./dist/types.js",
