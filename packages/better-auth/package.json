    "dotenv-cli": "^7.4.2",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.1",
    "tsup": "8.2.2",
    "typescript": "5.7.3"
  },
  "dependencies": {
    "@repo/db": "workspace: *",
    "@repo/env": "workspace: *",
    "better-auth": "1.1.16",
    "drizzle-orm": "^0.39.2"
