{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "moduleResolution": "node16",
    "module": "Node16",
    "noEmit": false,

    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
